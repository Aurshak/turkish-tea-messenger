<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:HTMLPanel styleName="htmlPanel">
		<g:Label text="Welcome to the Turkish Tea Messenger!" styleName="h1" />
	    <g:VerticalPanel styleName="vPanel">
			<g:Label text="Please sign up or log in" styleName="center" />
			<g:HorizontalPanel styleName="hPanel">
				<g:cell horizontalAlignment="ALIGN_CENTER">
					<g:Button ui:field="signUpButton" text="Sign up" styleName="button" />
				</g:cell>
			    <g:cell horizontalAlignment="ALIGN_CENTER">
					<g:Button ui:field="logInButton" text="Log in" styleName="button" />
				</g:cell>
			</g:HorizontalPanel>
			<g:Image url="cay-keyfi.jpg" styleName="image" />
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 